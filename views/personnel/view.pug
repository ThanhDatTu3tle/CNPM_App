extends ../layouts/common
block content 
    .container-sm
        .row
            .col
                | 
            .col-8
                form(action="/personnel/view", method="POST")
                    h1 Chi tiết nhân viên 

                    .row
                        .col-8 
                            .input-group.input-group-sm.mb-2
                                span#inputGroup-sizing-sm.input-group-text Mã nhân viên
                                input.form-control(type='text', placeholder=user.id, name='id', aria-label='Sizing example input', aria-describedby='inputGroup-sizing-sm')
                            .input-group.input-group-sm.mb-2
                                span#inputGroup-sizing-sm.input-group-text Họ và tên
                                input.form-control(type='text', placeholder=user.user_name, name='user_name', aria-label='Sizing example input', aria-describedby='inputGroup-sizing-sm')
                            .input-group.input-group-sm.mb-2
                                span#inputGroup-sizing-sm.input-group-text Nơi sinh
                                input.form-control(type='text', placeholder=user.user_noisinh, name='user_noisinh', aria-label='Sizing example input', aria-describedby='inputGroup-sizing-sm')
                            .input-group.input-group-sm.mb-2
                                span#inputGroup-sizing-sm.input-group-text Nguyên quán
                                input.form-control(type='text', placeholder=user.user_nguyenquan, name='user_nguyenquan', aria-label='Sizing example input', aria-describedby='inputGroup-sizing-sm')
                            .input-group.input-group-sm.mb-2
                                span#inputGroup-sizing-sm.input-group-text Hộ khẩu thường trú
                                input.form-control(type='text', placeholder=user.user_hokhauthuongtru, name='user_hokhauthuongtru', aria-label='Sizing example input', aria-describedby='inputGroup-sizing-sm')
                            .input-group.input-group-sm.mb-2
                                span#inputGroup-sizing-sm.input-group-text Hộ khẩu tạm trú
                                input.form-control(type='text', placeholder=user.user_hokhautamtru, name='user_hokhautamtru', aria-label='Sizing example input', aria-describedby='inputGroup-sizing-sm')
                        .col-4
                            img.rounded.mx-auto.d-block(src='/images/add_photo.jpg', alt='...')
                            span &nbsp 
                    .input-group.input-group-sm.mb-2
                        span#inputGroup-sizing-sm.input-group-text Ngày sinh
                        input.form-control(type='text', placeholder=user.user_ngaysinh, name='user_ngaysinh', aria-label='Sizing example input', aria-describedby='inputGroup-sizing-sm')

                        span#inputGroup-sizing-sm.input-group-text Giới tính
